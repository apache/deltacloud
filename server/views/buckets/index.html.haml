%h1
  Buckets
%br
%p
  =link_to 'Create new bucket', api_url_for("buckets/new")

%table.display
  %thead
    %tr
      %th
        ID
      %th
        Name

  %tbody
    - @buckets.each do |bucket|
      %tr
        %td
          = link_to bucket.id, bucket_url(bucket.id)
        %td
          = bucket.name
        %td
          =link_to_action 'Delete', destroy_bucket_url(bucket.name), :delete
